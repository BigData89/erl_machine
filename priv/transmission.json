{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Transmission datasheet",
    "description": "The document that summarizes characteristics of a transmission",

    "definitions":{
        "vertex":{
            "type": "string",
            "description": "The unique identity on a graph"
        },
        "edge":{
            "type": "object",
            "additionalProperties":{
                "anyOf": [
                    { "type": "array", "items": { "$ref": "#/definitions/vertex" } },
                    { "$ref": "#/definitions/vertex" }
                ]
            },
            "minProperties": 1,
            "maxProperties": 1
        }
    },

    "type": "object",
    "properties":{
        "description":{
            "type": "string",
            "description": "The brief manufacturer overview or metadata for auto generated document"
        },
        "extensions":{
            "type": "object",
            "additionalProperties":{
                "$ref": "assembly.json#"
            },
            "description": "The vocabulary which specifies the setup of a transmission"
        },
        "transmission": {
            "type": "array",
            "items":{
                "$ref": "#/definitions/edge"
            },
            "minItems": 1,
            "additionalProperties": false,
            "description": "Transmission arrangement graph"
        }
    },
    "required": [ "extensions", "transmission" ]
}
